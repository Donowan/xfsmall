<view class="flex topArea">
    <form class="container">
        <view class="flex flexAround topSearch subTitle">
            <text class="donowan iconsearch lSize"></text>
            <input focus="true" placeholder="请输入搜索的内容" confirm-type="done"  name="keyWords" bindinput="associate" type="text" value="{{inputValue}}" />
            <view class="flex flexBetween" style="flex: 1">
                <slot name="search"></slot>
                <view class="mSize">|</view>
                <view class="topSearchFont bold" style="font-size: 26rpx" catchtap='enterSearchDetal'>搜索</view>
            </view>
        </view>

    </form>
</view>